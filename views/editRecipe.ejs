<h3>Edit recipe: <%=userRecipe[0].recipeName%></h3>

<form action=`/profile/editProfile`>
  <div class="container">
    <div class="modal-body">
      <div class="form-group" id="recipeNameGroup">
        <div class="row">
          <label for="recipeNameInput">Recipe name</label>
          <input type="text" class="form-control" id="recipeNameInput" name="recipeNameInput" value="<%= userRecipe[0].recipeName %>">
        </div>
      </div>
      <div class="form-group" id="mealTypeGroup">
        <div class="row">
          <label for="mealTypeSelect">Meal type</label>
          <select class="form-control" id="mealTypeSelect" name="mealTypeSelect">
            <% if (userRecipe[0].mealType === 'Breakfast') { %>
              <option selected="selected">Breakfast</option>
            <% } else { %> <option>Breakfast</option><% } %>
            <% if (userRecipe[0].mealType === 'Lunch') { %>
              <option selected="selected">Lunch</option>
            <% } else { %> <option>Lunch</option><% } %>
            <% if (userRecipe[0].mealType === 'Dinner') { %>
              <option selected="selected">Dinner</option>
            <% } else { %> <option>Dinner</option><% } %>
            <% if (userRecipe[0].mealType === 'Dessert') { %>
              <option selected="selected">Dessert</option>
            <% } else { %> <option>Dessert</option><% } %>
          </select>
        </div>
      </div>
      <div class="form-group" id="ingredientsGroup">
        <div class="row">
          <label for="ingredientsLabel">Ingredients</label>
        </div>
        <div class="row text-left">
          <div class="col-2">
            <label for="ingredientQtyInput">Qty</label>
          </div>
          <div class="col-3">
            <label for="ingredientMeasuringUnitSelect">Meas. Unit</label>
          </div>
          <div class="col-7">
            <label for="ingredientItemInput">Item</label>
          </div>
        </div>
        <div class="row">
          <div class="col-2">
            <input type="text" class="form-control" id="ingredientQtyInput" name="ingredientQtyInput">
          </div>
          <div class="col-3">
            <select class="form-control" id="ingredientMeasuringUnitSelect" name="ingredientMeasuringUnitSelect">
              <option>cup</option>
              <option>fl oz</option>
              <option>g</option>
              <option>gallon</option>
              <option>kg</option>
              <option>l</option>
              <option>lb</option>
              <option>mg</option>
              <option>ml</option>
              <option>oz</option>
              <option>pint</option>
              <option>quart</option>
              <option>tbs</option>
              <option>tsp</option>
              <option>whole</option>
            </select>
          </div>
          <div class="col-7">
            <input type="text" class="form-control" id="ingredientItemInput" name="ingredientItemInput">
          </div>
        </div>
      </div>
      <div class="form-group" id="prepInstructionsGroup">
        <div class="row">
          <label for="prepInstructionsInput">Prep instructions</label>
          <textarea class="form-control" id="prepInstructionsTextArea" rows="3"  name="prepInstructionsTextArea"><%= userRecipe[0].prepInstructions%></textarea>
        </div>
      </div>
      <div class="form-group" id="prepTimeGroup">
        <div class="row">
          <label for="prepTimeInput">Prep time</label>
          <input type="text" class="form-control" id="prepTimeInput" name="prepTimeInput" value="<%= userRecipe[0].prepTime%>">
        </div>
      </div>
      <div class="form-group" id="cookTimeGroup">
        <div class="row">
          <label for="cookTimeInput">Cook time</label>
          <input type="text" class="form-control" id="cookTimeInput" name="cookTimeInput" value="<%= userRecipe[0].cookTime%>">
        </div>
      </div>
      <div class="form-group" id="servingSizeGroup">
        <div class="row">
          <label for="servingSizeSelect">Serving size</label>&nbsp;&nbsp;&nbsp;&nbsp;
          <select class="form-control-sm" id="servingSizeSelect" name="servingSizeSelect">
            <% if (userRecipe[0].servingSize === 1) { %>
              <option selected="selected">1</option>
            <% } else { %> <option>1</option><% } %>
            <% if (userRecipe[0].servingSize === 2) { %>
              <option selected="selected">2</option>
            <% } else { %> <option>2</option><% } %>
            <% if (userRecipe[0].servingSize === 3) { %>
              <option selected="selected">3</option>
            <% } else { %> <option>3</option><% } %>
            <% if (userRecipe[0].servingSize === 4) { %>
              <option selected="selected">4</option>
            <% } else { %> <option>4</option><% } %>
            <% if (userRecipe[0].servingSize === 5) { %>
              <option selected="selected">5</option>
            <% } else { %> <option>5</option><% } %>
            <% if (userRecipe[0].servingSize === 6) { %>
              <option selected="selected">6</option>
            <% } else { %> <option>6</option><% } %>
            <% if (userRecipe[0].servingSize === 7) { %>
              <option selected="selected">7</option>
            <% } else { %> <option>7</option><% } %>
            <% if (userRecipe[0].servingSize === 8) { %>
              <option selected="selected">8</option>
            <% } else { %> <option>8</option><% } %>
            <% if (userRecipe[0].servingSize === 9) { %>
              <option selected="selected">9</option>
            <% } else { %> <option>9</option><% } %>
            <% if (userRecipe[0].servingSize === 10) { %>
              <option selected="selected">10</option>
            <% } else { %> <option>10</option><% } %>
            <% if (userRecipe[0].servingSize === 11) { %>
              <option selected="selected">11</option>
            <% } else { %> <option>11</option><% } %>
            <% if (userRecipe[0].servingSize === 12) { %>
              <option selected="selected">12</option>
            <% } else { %> <option>12</option><% } %>
          </select>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <a href="/profile" class="btn" id="cancelLink">Cancel</a>
      <input type="button" class="btn btn-danger" id="deleteRecipeBtn" value="Delete recipe">
      <input type="submit" class="btn branded-btn" id="saveRecipeBtn" value="Update recipe">
    </div>
  </div> <!-- close container -->
</form>