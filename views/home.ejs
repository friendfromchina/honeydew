<div class="row">
  <div class="col-10" id="recipeBank">
  </div>
</div>
<div class="row">
  <div class="col-12 text-right">

    <div class="modal fade" id="newRecipeModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add new recipe</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form method="POST" action="/api/recipes">
              <div class="form-group">
                <label for="recipeName">Recipe name</label>
                <input type="text" class="form-control" id="recipeName">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save Recipe</button>
          </div>
        </div>
      </div>
    </div>

    <button type="button" class="btn branded-btn" data-toggle="modal" data-target="#newRecipeModal">Add new recipe</button>
  </div>
</div>
<br>
<div class="row">
  <div class="col-12">
    <div class="table-responsive" id="mealPlanCalendar"></div>
  </div>
</div>
